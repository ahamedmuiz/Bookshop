<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="ancPaneStartUp"
            prefHeight="701.0" prefWidth="1311.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lk.ijse.finalproject.controller.StartupController"
            style="-fx-background-color: transparent;">

    <!-- Background Image -->
    <ImageView fitHeight="701.0" fitWidth="1311.0" pickOnBounds="true" preserveRatio="false"
               layoutX="0.0" layoutY="0.0">
        <image>
            <Image url="@../images/start6.jpeg"/>
        </image>
    </ImageView>

    <!-- Glassmorphism Card -->
    <VBox alignment="CENTER"
          layoutX="355.0" layoutY="170.0"
          spacing="30.0"
          prefWidth="600.0" prefHeight="360.0"
          style="-fx-background-color: rgba(0,0,0,0.5);
                 -fx-background-radius: 25px;
                 -fx-padding: 40px;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.75), 20, 0.5, 0, 0);">
        <children>

            <!-- Title -->
            <Label text="BookHive Management System"
                   textFill="white"
                   style="-fx-font-size: 28px;
                          -fx-font-weight: bold;
                          -fx-text-alignment: center;
                          -fx-wrap-text: true;" />

            <!-- Optional Subtext -->
            <Label text="Empowering Your Inventory with Intelligence"
                   textFill="#e0e0e0"
                   style="-fx-font-size: 14px;
                          -fx-font-style: italic;" />

            <!-- Start Button -->
            <Button text="Start!"
                    onAction="#btnGoToLoginPage"
                    style="-fx-background-color: linear-gradient(to bottom right, #00bfff, #0077ff);
                           -fx-text-fill: white;
                           -fx-font-size: 16px;
                           -fx-font-weight: bold;
                           -fx-background-radius: 12px;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.4), 8, 0.3, 0, 2);"
                    prefWidth="160.0" prefHeight="48.0"/>

        </children>
    </VBox>

</AnchorPane>
